@model DateSite.Models.ProfileModel

@{
    ViewBag.Title = "My profile settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/Profile.css");
    var userid = Session["UserID"];
}
<div class="container">
    <h2>My profile settings</h2>
    </br>
    </br>
    <div class="col-md-3">
        <img src="~/Content/ProfileImages/@(Model.pic)" width="200" height="300" />

        
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table>
                <tr>
                <td><input type="file" id="File" name="File" style="display: none;" /></td>
                <td><input type="button" value="Upload new profile picture" class="uploadpic" /></td>
                
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td><input type="submit" name="submit" value="Upload" /></td>
                </tr>
            </table>
        }


    </div>


    <div class="col-md-8">
        <form id="usrform">
            Hide your profile from search?
            <input type="radio" name="hide" value="y" @(!Model.hide ? "" : "checked=\"checked\"") />Yes
            <input type="radio" name="hide" value="n" @(Model.hide ? "" : "checked=\"checked\"") />No
            <textarea class="aboutbox" name="about" form="usrform">@Model.about </textarea>
            </br>
            <input type="submit">
        </form>

    </div>
</div>

<script type="text/javascript" src="@Url.Content("/Scripts/mprofile.js")"></script>
